<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
     <TextView android:id="@+id/sectionTextView" 
        android:layout_width="fill_parent" 
        android:paddingLeft="8dip"
        android:layout_marginBottom="3dip"
        android:layout_height="wrap_content"
		android:text="A" 
		android:textStyle="bold"
		android:textSize="18sp"
		android:textColor="#000000"
		android:background="#70d7f8"
		android:visibility="gone"
	/>
     
     <RelativeLayout
         android:id="@+id/infoRowContainer"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_marginBottom="3dp" >
	
	    <ImageView
	        android:id="@+id/userImg"
	        android:layout_width="40dip"
	        android:layout_height="35dp"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        android:layout_marginTop="5dp"
	        android:contentDescription="image"
	        android:focusable="false"
	        android:scaleType="fitCenter"
	        android:src="@drawable/ic_menu_perfil"
	        android:visibility="visible" />
	    
	    <TextView
	        android:id="@+id/nickNameView"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:layout_alignParentTop="true"
	        android:layout_toRightOf="@id/userImg"
	        android:textStyle="bold"
	        android:textSize="20sp"
	        android:text="Fullname" />
	  
	      <TextView
	          android:id="@+id/fullNameView"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_below="@id/nickNameView"
	          android:layout_toRightOf="@id/userImg"
	          android:text="Fullname"
	          android:textColor="@color/actionbar_background_bottom"
	          android:textSize="14sp"
	          android:textStyle="bold" />

	</RelativeLayout>

</LinearLayout>